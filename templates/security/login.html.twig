<div class="text-center condensed mx-auto">
  <h1>Log in to Anikura</h1>
  <form method="post">
    {# CSRF token #}
    <input
      type="hidden"
      name="_csrf_token"
      value="{{ csrf_token('authenticate') }}"
    />

    <div class="my-3">
      <label for="username">Username</label>
      <input
        id="username"
        name="username"
        value="{{ last_username }}"
        class="form-control"
        required
        autofocus
      />
    </div>

    <div class="my-3">
      <label for="password">Password</label>
      <input
        id="password"
        type="password"
        name="password"
        class="form-control"
        required
      />
    </div>

    {% if error %}
      <div class="text-danger mb-3">{{ error.messageKey }}</div>
    {% endif %}

    <input type="submit" class="btn btn-primary" value="Log in" />
  </form>
</div>
{% endblock %}
